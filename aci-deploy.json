{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {"type" :  "string"},
    "location": {"type" :  "string"},
    "containerName": {"type" :  "string"},
    "imageName": {"type" :  "string"},
    "port": {"type" :  "string"},
    "mountPath": {"type" :  "string"},
    "dnsLabel": {"type" :  "string"},
    "storageAccountName": {"type" :  "string"},
    "storageAccountKey": {"type" :  "securestring"},
    "containerRegistryName": {"type" :  "string"},
    "acrUserName": {"type" :  "string"},
    "acrPassword": {"type" :  "securestring"},
    "fileShareName": {"type" :  "string"}
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "[parameters('imageName')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "ports": [
                {
                  "port": "[parameters('port')]"
                }
              ],
              "volumeMounts": [
                {
                  "name": "logvolume",
                  "mountPath": "[parameters('mountPath')]"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('dnsLabel')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": "[parameters('port')]"
            }
          ]
        },
        "volumes": [
          {
            "name": "logvolume",
            "azureFile": {
              "shareName": "[parameters('fileShareName')]",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[parameters('containerRegistryName')]",
            "username": "[parameters('acrUserName')]",
            "password": "[parameters('acrPassword')]"
          }
        ]
      }
    }
  ]
}